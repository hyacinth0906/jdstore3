<style>
 div.item{
   height: auto;
   width: 100%;
   box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);

 }

 div.col-md-3{
   margin-top: 20px;
   margin-bottom: 20px;

 }

 </style>

<div class="container">
  <div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
      <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
      <li data-target="#myCarousel" data-slide-to="1"></li>
      <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
      <div class="item active">
        <img src="http://ww4.sinaimg.cn/large/006tNbRwgy1fg21zqazfwj30uj0nm0xr.jpg" alt="Los Angeles" style="width:100%;">
        <div class="carousel-caption text-middle">
          <h1>累了吗？</h1>
          <h3>吃点甜品补充能量吧！</h3>
        </div>
      </div>

      <div class="item">
        <img src="http://ww2.sinaimg.cn/large/006tNbRwgy1fg228fac3aj30ub0n6q8p.jpg" alt="Chicago" style="width:100%;">
        <div class="carousel-caption">
          <h1>人生苦短，多吃甜品</h1>
          <h3>胖友们，休息时间到了！</h3>
        </div>
      </div>

      <div class="item">
        <img src="http://ww2.sinaimg.cn/large/006tNbRwgy1fg220hya8aj30vv0nmq61.jpg" alt="New York" style="width:100%;">
        <div class="carousel-caption">
          <h1>这才是下午茶的样子</h1>
          <h3>赚钱要紧，心情更要紧！</h3>
        </div>
      </div>

    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div><br>


<div class="container">
<div class="row">
  <% @products.each do |product| %>
    <div class="col-xs-6 col-md-3">
      <%= link_to product_path(product) do %>
        <% if product.photos.present? %>
          <%= image_tag(product.photos[0].avatar.thumb.url, class: "thumbnail") %>
        <% else %>
          <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
        <% end %>
      <% end %>
      <%= product.title %> ￥ <%= product.price %>
    </div>
  <% end %>
</div>
</div>
