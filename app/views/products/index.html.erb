<style>
 div.item{
   height: auto;
   width: 100%;
   box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);

 }

 div.col-md-3{
   margin-top: 20px;
   margin-bottom: 20px;

 }

 </style>

 <div class="container">
   <div id="myCarousel2" class="carousel slide" data-ride="carousel">
     <!-- Indicators -->
     <ol class="carousel-indicators">
       <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
       <li data-target="#myCarousel" data-slide-to="1"></li>
       <li data-target="#myCarousel" data-slide-to="2"></li>
     </ol>

     <!-- Wrapper for slides -->
     <div class="carousel-inner">
       <h1>新品推荐</h1>
       <div class="item active">
         <img src="https://ws4.sinaimg.cn/large/006tKfTcgy1fg4yl8ak7gj31bv0ckqdc.jpg"  style="width:100%;">
       </div>

       <div class="item">
         <img src="https://ws2.sinaimg.cn/large/006tKfTcgy1fg4ym1mh7zj31ci0chk2h.jpg"  style="width:100%;">
       </div>

       <div class="item">
         <img src="https://ws2.sinaimg.cn/large/006tKfTcgy1fg4ymduocoj314a0as10y.jpg"  style="width:100%;">
       </div>

     </div>

     <!-- Left and right controls -->
     <a class="left carousel-control" href="#myCarousel" data-slide="prev">
       <span class="glyphicon glyphicon-chevron-left"></span>
       <span class="sr-only">Previous</span>
     </a>
     <a class="right carousel-control" href="#myCarousel" data-slide="next">
       <span class="glyphicon glyphicon-chevron-right"></span>
       <span class="sr-only">Next</span>
     </a>
   </div>
 </div>



<div class="container">
<div class="row">
  <% @products.each do |product| %>
    <div class="col-xs-6 col-md-3">
      <%= link_to product_path(product) do %>
        <% if product.photos.present? %>
          <%= image_tag(product.photos[0].avatar.thumb.url, class: "thumbnail") %>
        <% else %>
          <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
        <% end %>
      <% end %>
      <%= product.title %> ￥ <%= product.price %>
    </div>
  <% end %>
</div>
</div>
