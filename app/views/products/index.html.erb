<div class="container">
  <div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
      <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
      <li data-target="#myCarousel" data-slide-to="1"></li>
      <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
      <div class="item active">
        <img src="http://ww3.sinaimg.cn/large/006tKfTcgy1fg155kypaaj30z50rc0zq.jpg" alt="Los Angeles" style="width:100%;">
        <div class="carousel-caption text-middle">
          <h1>Los Angeles</h1>
          <h3>LA is always so much fun!</h3>
        </div>
      </div>

      <div class="item">
        <img src="http://ww2.sinaimg.cn/large/006tKfTcgy1fg155tyrfnj30yx0r3thh.jpg" alt="Chicago" style="width:100%;">
        <div class="carousel-caption">
          <h1>Los Angeles</h1>
          <h3>LA is always so much fun!</h3>
        </div>
      </div>

      <div class="item">
        <img src="http://ww3.sinaimg.cn/large/006tKfTcgy1fg15623l3fj30jv0fuabm.jpg" alt="New York" style="width:100%;">
        <div class="carousel-caption">
          <h1>Los Angeles</h1>
          <h3>LA is always so much fun!</h3>
        </div>
      </div>

    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div><br>
<div class="row">
  <% @products.each do |product| %>
    <div class="col-xs-6 col-md-3">
      <%= link_to product_path(product) do %>
        <% if product.image.present? %>
          <%= image_tag(product.image.thumb.url, class: "thumbnail") %>
        <% else %>
          <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
        <% end %>
      <% end %>
      <%= product.title %> ï¿¥ <%= product.price %>
    </div>
  <% end %>
</div>
